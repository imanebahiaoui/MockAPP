{% extends 'profile.html.twig' %}

{% block body %}
    <div class="col-md-5  toppad  pull-right col-md-offset-3  ">
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Profile</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                   {% if user.avatar  %}
                    <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="{{ asset('uploads/avatars/' ~ user.avatar) }}" class="img-circle img-responsive" style="width: 200px;height: 100px;"> </div>
                    {% else %}
                    <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="http://district5300.org/wp-content/plugins/dacdbplus/img/no_image.jpg" class="img-circle img-responsive" style="width: 200px;height: 100px;"> </div>
                    {% endif %}
                    <div class=" col-md-9 col-lg-9 ">
                        <table class="table table-user-information">
                            <tbody>
                            <tr>
                                <td>login</td>
                                <td>{{ user.login }}</td>
                            </tr>
                            <tr>
                                <td>First Name</td>
                                <td>{{ user.firstname }}</td>
                            </tr>
                            <tr>
                                <td>Last Name</td>
                                <td>{{ user.lastname }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <a href="editUser/{{ user.id }}" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-edit"></i></a>
            </div>
        </div>
    </div>
{% endblock %}